<div class="product-inner posr ta2" data-product-block>
	{% if is_wishlist %}
		<button type="button" class="btn-wishlist df aic jcc posa delete" onclick="deleteWishlist({{product.product_id}})">
			<svg class="ta2">
				<use xlink:href="/catalog/view/theme/noir/img/sprite.svg#cross"></use>
			</svg>
		</button>
	{% else %}
		<button type="button" class="btn-wishlist df aic jcc posa{{ product.product_id in wishlist ? ' active'}}" data-wishlist="{{product.product_id}}">
			<svg class="ta2">
				<use xlink:href="/catalog/view/theme/noir/img/sprite.svg#heart1"></use>
			</svg>
		</button>
	{% endif %}
	<a class="category-product-image posr{{product.thumb1 ? ' is-hover'}}" href="{{product.href}}" data-item-thumbs>
		<span class="posa to"><img src="{{product.thumb}}" alt="{{product.name}}"></span>
		{% if product.thumb1 %}
			<span class="posa to"><img src="{{product.thumb1}}" alt="{{product.name}}"><span>
				{% endif %}
			</a>
			<div class="product-item-content">
				<h4 class="list-product-title">
					<a href="{{ product.href }}">{{ product.name }}
						{% if product.options %}
							{{ product.options[0].name }}
						{% endif %}
					</a>
				</h4>
				<div class="list-rating df">
					{% for i in 1..5 %}
						<div class="rating-star {{product.rating < i ? 'empty' : 'full'}}">
							<svg>
								<use xlink:href="/catalog/view/theme/noir/img/sprite.svg#rating-star"></use>
							</svg>
						</div>
					{% endfor %}
				</div>
				{% if product.price %}
					<div class="list-prices df aic jcsb">
						{% if not product.special %}
							<div class="list-price">{{ product.price }}</div>
						{% else %}
							<div class="list-price">{{ product.special }}</div>
							<div class="list-old-price">{{ product.price }}</div>
						{% endif %}
					</div>
				{% endif %}
			</div>
			<div class="dropdown-holder posr ta2">
				<div class="dropdown-block">
					<div class="tocart df jcsb">
						<div class="quantity df" data-quantity>
							<div class="gnt-btn df jcc aic" data-qnt-btn="0">-</div>
							<input type="number" name="quantity" value="1" data-input-quantity class="form-control cnt">
							<div class="gnt-btn df jcc aic" data-qnt-btn="1">+</div>
						</div>
						{% if product.options %}
							<button class="product-item-btn-option btn-tocart-style" data-pid="{{ product.product_id }}" data-oid="{{ product.options[0].product_option_id }}" data-ovid="{{ product.options[0].product_option_value_id }}">
								<svg width="19" height="21">
									<use xlink:href="/catalog/view/theme/noir/img/sprite.svg#cart"></use>
								</svg>
							</button>
						{% elseif product.options == false %}
							<button type="button" class="btn-tocart" data-pid="{{product.product_id}}" data-cart-add="{{product.product_id}}">
								<span>Do koszyka</span>
								<svg width="19" height="21">
									<use xlink:href="/catalog/view/theme/noir/img/sprite.svg#cart"></use>
								</svg>
							</button>
						{% endif %}

					</div>
					{% if product.options %}
						<div class="product-item-option-buttons df jcsb">
							{% for opt in product.options %}
								<button type="button" class="product-item-btn-option" data-pid="{{ product.product_id }}" data-oid="{{ opt.product_option_id }}" data-ovid="{{ opt.product_option_value_id }}">
									<span>
										{{ opt.name }}
									</span>
								</button>
							{% endfor %}
						</div>
					{% endif %}

					<div class="product-info">
						{% if product.intro %}
							<div class="intro">{{ product.intro }}</div>
						{% endif %}
						<div class="stock">
							{% if product.quantity %}
								<span class="dif aic">{{product.quantity}}
									szt.</span>
								<span class="dif aic">Dostawa w 24 godziny</span>
							{% else %}
								<span class="dif aic">{{product.stock}}</span>
							{% endif %}
						</div>
					</div>
				</div>
			</div>

		</div>
